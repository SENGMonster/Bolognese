.sidebar
  .trainer_profile_pic
    %img{src: @trainer.profile_picture.url}

  .contact_data
    %table
      %tr
        %td
          =image_tag("Icons/Telefon.png", class: 'icon')
        %td
          =@trainer.contact_data
      %tr
        %td
          =image_tag("Icons/Mail.png", class: 'icon')
        %td  
          =@trainer.contact_email

  .trainer_sub_menu
    %p="Alle NLP Lifetuning Trainer"
    - Trainer.all.each do |t|
      .trainer_sub_menu_item
        %a{href: trainer_show_path(id: t.id)}=t.name

.big_content
  %h1=@trainer.name
  .trainer_description
    =@trainer.description.html_safe

.clear
